Host *
  StrictHostKeyChecking no
  ForwardAgent yes
  ForwardX11 yes
  IdentityFile credentials/comhis.pem
  User cloud-user

Host frontend
  HostName {{ hostvars['frontend']['ansible_ssh_host']}}

{% for node in groups['all'] %}
{% if (node != 'frontend') %}
Host {{ node }}
  HostName {{ hostvars[node]['ansible_ssh_host']}}
  ProxyCommand=ssh -F ssh.conf -W %h:%p frontend

{% endif %}
{% endfor %}
